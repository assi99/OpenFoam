FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];   // 1/s

internalField   uniform 1;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 1;
    }
    outlet
    {
        type            zeroGradient;
    }
    airframe
    {
        type            omegaWallFunction;
        value           uniform 1;
    }
    top
    {
        type            slip;
    }
    bottom
    {
        type            slip;
    }
    sides
    {
        type            slip;
    }
}

